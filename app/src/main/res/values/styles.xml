<resources>
	<style name="TitleDetailText">
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">@dimen/font18</item>
		<item name="android:textColor">@color/textColor</item>
	</style>

	<style name="DescDetailText">
		<item name="android:layout_marginTop">@dimen/margin16</item>
		<item name="android:textColor">@color/textDetailColor</item>
		<item name="android:textSize">@dimen/font14</item>
		<item name="android:lineSpacingExtra">@dimen/margin4</item>
	</style>

	<style name="ToolbarTitleTextAppearance" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
		<item name="android:textColor">@android:color/transparent</item>
	</style>

	<style name="RecyclerStyle">
		<item name="android:clipToPadding">false</item>
		<item name="android:scrollbars">vertical</item>
		<item name="android:paddingTop">@dimen/margin4</item>
	</style>

</resources>