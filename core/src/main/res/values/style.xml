<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleRvText">
        <item name="android:layout_marginStart">@dimen/margin16</item>
        <item name="android:layout_marginTop">@dimen/margin16</item>
        <item name="android:layout_marginEnd">@dimen/margin8</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/font16</item>
    </style>

    <style name="DescRvText">
        <item name="android:textColor">@color/textDetailColor</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginStart">@dimen/margin16</item>
        <item name="android:layout_marginTop">@dimen/margin8</item>
    </style>

    <style name="RvImage">
        <item name="android:layout_marginTop">@dimen/margin16</item>
        <item name="android:layout_marginEnd">@dimen/margin16</item>
        <item name="android:layout_marginBottom">@dimen/margin16</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
